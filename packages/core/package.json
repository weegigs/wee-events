{
  "name": "@weegigs/events-core",
  "version": "0.18.4",
  "description": "Core Event System",
  "author": "Kevin O'Neill <kevin@weegigs.com.au>",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "clean": "rimraf lib tsconfig.tsbuildinfo .eslintcache coverage",
    "build": "pnpm run lint && pnpm run compile && pnpm run test:coverage",
    "compile": "tsc --build",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:coverage:ui": "vitest --ui --coverage",
    "lint": "eslint \"src/**/*.ts\" --cache",
    "postinstall": "tsc --build -p tsconfig.full.json"
  },
  "dependencies": {
    "lodash": "catalog:",
    "luxon": "catalog:",
    "nanoid": "catalog:",
    "ulid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tsconfig/node22": "catalog:",
    "@types/lodash": "catalog:",
    "@types/luxon": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "files": [
    "lib"
  ],
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
