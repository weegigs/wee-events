{
  "name": "@weegigs/events-core",
  "version": "0.16.1",
  "description": "Core Event System",
  "author": "Kevin O'Neill <kevin@weegigs.com.au>",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "packageManager": "yarn@3.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "build": "yarn ws:build",
    "clean": "yarn ws:clean",
    "compile": "yarn ws:compile",
    "test": "yarn ws:test",
    "lint": "yarn ws:lint",
    "doctor": "yarn ws:doctor",
    "fix": "yarn run ws:fix",
    "prepack": "yarn run ws:prepack",
    "publish": "yarn run ws:publish"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "luxon": "^3.0.3",
    "nanoid": "^4.0.0",
    "ulid": "^2.3.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/luxon": "^3.0.1",
    "@types/node": "^16.11.59",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "html"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
