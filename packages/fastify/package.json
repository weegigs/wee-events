{
  "name": "@weegigs/events-fastify",
  "version": "0.17.0",
  "author": "Kevin O'Neill <kevin@weegigs.com.au>",
  "license": "MIT",
  "description": "Fastify services based on wee-events",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "packageManager": "yarn@3.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "build": "yarn ws:build",
    "clean": "yarn ws:clean",
    "compile": "yarn ws:compile",
    "test": "yarn ws:test",
    "lint": "yarn ws:lint",
    "doctor": "yarn ws:doctor",
    "fix": "yarn run ws:fix",
    "prepack": "yarn run ws:prepack",
    "publish": "yarn run ws:publish"
  },
  "dependencies": {
    "@effect-ts/core": "^0.60.4",
    "@fastify/sensible": "^4.1.0",
    "@weegigs/events-core": "workspace:^",
    "@weegigs/events-effects": "workspace:^",
    "fastify": "^4.6.0",
    "http-errors": "^2.0.0",
    "lodash": "^4.17.21",
    "ts-pattern": "^4.0.5"
  },
  "devDependencies": {
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/node": "^16.11.59",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
