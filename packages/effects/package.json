{
  "name": "@weegigs/events-effects",
  "version": "0.18.3",
  "description": "Effects utilities for Wee Events",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "build": "pnpm clean && pnpm lint && pnpm compile && pnpm test",
    "clean": "pnpm exec rimraf lib tsconfig.tsbuildinfo .eslintcache coverage",
    "compile": "pnpm exec swc src --out-dir lib --extensions .ts --ignore '**/*.spec.ts' '**/*.test.ts' --strip-leading-paths -C module.type=commonjs && pnpm exec tsc --emitDeclarationOnly",
    "test": "pnpm exec jest --passWithNoTests",
    "lint": "pnpm exec eslint \"src/**/*.ts\" --cache"
  },
  "author": "Kevin O'Neill <kevin@weegigs.com.au>",
  "license": "MIT",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.2",
    "effect": "^3.10.0",
    "@effect/platform": "^0.63.0",
    "@effect/platform-node": "^0.58.0",
    "@middy/core": "^4.4.0",
    "@middy/do-not-wait-for-empty-event-loop": "^4.4.0",
    "aws-lambda": "^1.0.7",
    "change-case": "^4.1.2",
    "lodash": "^4.17.21",
    "openapi3-ts": "^4.1.2",
    "senselogs": "^1.0.5",
    "yaml": "^2.2.2",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.0"
  },
  "peerDependencies": {
    "@aws-sdk/client-cloudwatch": "^3.179.0",
    "@aws-sdk/client-dynamodb": "^3.179.0",
    "@aws-sdk/client-eventbridge": "^3.179.0",
    "@aws-sdk/client-sfn": "^3.179.0",
    "@aws-sdk/lib-dynamodb": "^3.179.0",
    "effect": "^3.10.0",
    "@weegigs/dynamo-event-store": "workspace:^",
    "@weegigs/events-core": "workspace:^"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch": "^3.329.0",
    "@aws-sdk/client-dynamodb": "^3.329.0",
    "@aws-sdk/client-eventbridge": "^3.329.0",
    "@aws-sdk/client-sfn": "^3.329.0",
    "@aws-sdk/lib-dynamodb": "^3.329.0",
    "@aws-sdk/smithy-client": "^3.329.0",
    "@aws-sdk/types": "^3.329.0",
    "effect": "^3.10.0",
    "@effect/platform": "^0.63.0",
    "@effect/platform-node": "^0.58.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/aws-lambda": "^8.10.115",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.14.194",
    "@types/node": "^22.15.0",
    "@weegigs/dynamo-event-store": "workspace:*",
    "@weegigs/events-core": "workspace:*",
    "jest": "^29.7.0",
    "@swc/jest": "^0.2.29",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts$": ["@swc/jest"]
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "html"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
