{
  "name": "@weegigs/events-monorepo",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "author": "Kevin O'Neill <kevin@oneill.id.au>",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "bootstrap": "pnpm install --frozen-lockfile",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "compile": "turbo run compile",
    "test": "turbo run test",
    "fix": "pnpm fix:typescript-references",
    "fix:typescript-references": "pnpm dlx @monorepo-utils/workspaces-to-typescript-project-references workspaces-to-typescript-project-references --root --includesRoot",
    "prepublish": "turbo run clean && turbo run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "engines": {
    "node": ">=22.15.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/js": "^9.28.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@tsconfig/node22": "^22.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.14.194",
    "@types/node": "^22.15.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "lerna": "^6.6.2",
    "lodash": "^4.17.21",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/lib/**",
      "!**/node_modules/**",
      "!tools/**"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".<rootDir>/.build",
      ".<rootDir>/cdk.out",
      "<rootDir>/package.json",
      "<rootDir>tools/"
    ],
    "verbose": true
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ]
}
