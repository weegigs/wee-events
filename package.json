{
  "name": "@weegigs/events-monorepo",
  "version": "0.0.0",
  "description": "",
  "author": "Kevin O'Neill <kevin@oneill.id.au>",
  "private": true,
  "packageManager": "pnpm@7.26.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "bootstrap": "pnpm install --frozen-lockfile",
    "clean": "pnpm -r clean",
    "lint": "pnpm -r lint",
    "build": "pnpm exec lerna run build",
    "compile": "pnpm exec lerna run compile",
    "test": "pnpm compile && jest --coverage",
    "fix": "pnpm -r fix && pnpm fix:typescript-references",
    "fix:typescript-references": "pnpm dlx @monorepo-utils/workspaces-to-typescript-project-references workspaces-to-typescript-project-references --root --includesRoot",
    "publish": "pnpm -r --rebuild publish"
  },
  "engines": {
    "node": ">=16.14.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/node": "^16.11.62",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "lerna": "^6.5.1",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.3"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/lib/**",
      "!**/node_modules/**",
      "!tools/**"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".<rootDir>/.build",
      ".<rootDir>/cdk.out",
      "<rootDir>/package.json",
      "<rootDir>tools/"
    ],
    "verbose": true
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ]
}
