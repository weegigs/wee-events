{
  "name": "@weegigs/events-monorepo",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "author": "Kevin O'Neill <kevin@oneill.id.au>",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "bootstrap": "pnpm install --frozen-lockfile",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "compile": "turbo run compile",
    "test": "turbo run test",
    "fix": "pnpm fix:typescript-references",
    "fix:typescript-references": "pnpm dlx @monorepo-utils/workspaces-to-typescript-project-references workspaces-to-typescript-project-references --root --includesRoot",
    "prepublish": "turbo run clean && turbo run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "deps:check": "tsx scripts/update-deps.ts check",
    "deps:verify": "tsx scripts/update-deps.ts verify", 
    "deps:sync": "tsx scripts/update-deps.ts sync",
    "deps:outdated": "pnpm outdated",
    "deps:update": "pnpm update --latest && pnpm install"
  },
  "engines": {
    "node": ">=22.15.0"
  },
  "pnpm": {
    "catalog": {
      "typescript": "^5.8.3",
      "jest": "^29.7.0",
      "@swc/jest": "^0.2.29",
      "@types/jest": "^29.5.14",
      "@types/node": "^22.15.0",
      "@types/lodash": "^4.14.194",
      "lodash": "^4.17.21",
      "zod": "^3.21.4",
      "luxon": "^3.3.0",
      "@types/luxon": "^3.3.0",
      "ulid": "^2.3.0",
      "testcontainers": "^9.6.0",
      "@asteasolutions/zod-to-openapi": "^7.3.2",
      "openapi3-ts": "^4.1.2",
      "@aws-sdk/client-dynamodb": "^3.821.0",
      "@aws-sdk/lib-dynamodb": "^3.821.0",
      "@aws-sdk/smithy-client": "^3.374.0",
      "@aws-sdk/types": "^3.821.0",
      "@aws-sdk/service-error-classification": "^3.374.0",
      "@aws-sdk/util-dynamodb": "^3.821.0"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/js": "^9.28.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@tsconfig/node22": "^22.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/lib/**",
      "!**/node_modules/**",
      "!tools/**"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".<rootDir>/.build",
      ".<rootDir>/cdk.out",
      "<rootDir>/package.json",
      "<rootDir>tools/"
    ],
    "verbose": true
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ]
}
